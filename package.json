{
  "name": "livyflow",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "dev-full": "concurrently \"npm run dev\" \"npm run dev-backend\"",
    "dev-backend": "cd backend && python run.py",
    "dev-backend-reload": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "vite build",
    "build:production": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "npm run dev-full",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:smoke": "cypress run --spec \"cypress/e2e/smoke/**/*.cy.js\"",
    "test:visual": "cypress run --spec \"cypress/e2e/visual-regression/**/*.cy.js\"",
    "quality:check": "npm run lint && npm run test:run && npm run build",
    "quality:fix": "eslint src/ --ext .js,.jsx --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npx audit-ci --config .audit-ci.json",
    "analyze:bundle": "npx webpack-bundle-analyzer dist/assets/*.js",
    "analyze:deps": "npx depcheck",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "firebase": "^11.9.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-plaid-link": "^4.0.1",
    "react-router-dom": "^7.6.2",
    "react-toastify": "^11.0.5",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cypress/vite-dev-server": "^6.0.3",
    "@stagewise-plugins/react": "^0.5.2",
    "@stagewise/toolbar-react": "^0.5.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.4",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.10.4",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5",
    "vitest": "^3.2.4"
  }
}
